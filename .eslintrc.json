{
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
          "experimentalObjectRestSpread": true
        },
        "ecmaVersion": 2017
    },
    "rules": {
        "handle-callback-err": "error",
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-unused-vars": ["error", {"args": "after-used", "argsIgnorePattern": "^_"}]
    }
}
